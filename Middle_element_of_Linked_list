
#include <iostream>
using namespace std;
struct node{
    int data;
    node* next;
    
}*head;

void new_node(int data,node* *head)
{
    node* new_n=new node;
    new_n->data=data;
    new_n->next=*head;
    *head=new_n;
}
void middle(node *head)
{
    struct node *first=head;
    struct node *second=head;
    if(head!=NULL)
    {
       while(second!=NULL && second->next!=NULL )
       {
        first=first->next;
        second=second->next->next;
    
           
       }
        cout<<"\nMiddle element is: "<<first->data;
   }

}
void print(node* ptr)
{
    cout<<"->";
 while(ptr!=NULL)   
 {
     std::cout<< ptr->data<<"->";
    ptr=ptr->next;
     
 }
 cout<<"NULL";
}

int main()
{ int n,x;
   struct node* head=NULL;
   cout<<"Enter number of nodes you want to create: ";
   cin>>n;
   cout<<"Enter elements: ";
   for(int i=0;i<n;i++)
   {
       cin>>x;
   new_node(x,&head);
   
      }
   print(head);
   middle(head);
    return 0;
}
